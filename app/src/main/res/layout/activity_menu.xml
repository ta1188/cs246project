<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cs246project.kindergartenprepapp.MainActivity">

    <Button
        android:id="@+id/wordSelectableBtn"
        android:text="Word Selectable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendToWordSelectable"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:text="Count Selectable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendToCountSelectable"
        android:layout_below="@+id/wordSelectableBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:text="Name Selectable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendToNameSelectable"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:id="@+id/letterTraceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letter Trace"
        android:onClick="sendToLetterTraceActivity"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/numberTraceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Trace"
        android:onClick="sendToNumberTraceActivity"
        android:layout_below="@+id/letterTraceButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/nameTraceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Trace"
        android:onClick="sendToNameTraceActivity"
        android:layout_below="@+id/numberTraceButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/aboutAppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About App"
        android:onClick="sendToAboutActivity"
        android:layout_below="@+id/nameTraceButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
