<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cs246project.kindergartenprepapp.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:maxWidth="400dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/letterTraceButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Letter Trace"
            android:onClick="sendToLetterTraceActivity"
            app:srcCompat="@drawable/activity_btn_letter"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:id="@+id/numberTraceButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Number Trace"
            android:onClick="sendToNumberTraceActivity"
            app:srcCompat="@drawable/activity_btn_number"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintRight_toLeftOf="@+id/nameTraceButton"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/letterTraceButton"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:id="@+id/nameTraceButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Name Trace"
            android:onClick="sendToNameTraceActivity"
            app:srcCompat="@drawable/activity_btn_name_trace"
            android:layout_marginStart="16dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:maxWidth="400dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:id="@+id/constraintLayout">

        <ImageView
            android:id="@+id/wordSelectableBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="sendToWordSelectable"
            app:srcCompat="@drawable/activity_btn_word"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:id="@+id/countSelectableBtn"
            android:text="Count Selectable"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="sendToCountSelectable"
            app:srcCompat="@drawable/activity_btn_count"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintLeft_toRightOf="@+id/wordSelectableBtn"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/nameSelectableBtn"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:id="@+id/nameSelectableBtn"
            android:text="Name Selectable"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="sendToNameSelectable"
            app:srcCompat="@drawable/activity_btn_name"
            android:layout_marginStart="16dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />

    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/aboutAppButton"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="6dp"
        android:background="@android:color/transparent"
        android:backgroundTintMode="src_over"
        android:onClick="sendToAboutActivity"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:text="About App"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:style="@android:style/Widget.DeviceDefault.ImageButton" />


</android.support.constraint.ConstraintLayout>

